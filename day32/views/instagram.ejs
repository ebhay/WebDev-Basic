<%- include("include/head.ejs") %>
<html>
<body>
    <h1>Hey! it's <%= data.name %> Landed On Page</h1>
    <button><i class="fas fa-user-plus"></i> Follow</button>
    <button><i class="fas fa-comment"></i> Message</button>
    <h3><i class="fas fa-users"></i> Followers <%= data.followers %> &nbsp;
        <i class="fas fa-user-friends"></i> Following <%= data.following %>
    </h3>
    <div class="container">
        <% for (let post of data.posts) { %>
        <div class="item">
            <img src="<%= post.image %>" class="img" alt="postimg">
            <div class="post-info">
                <p><i class="fas fa-heart like-icon"></i> <%= post.likes %> Likes &nbsp;
                <i class="fas fa-solid fa-comment"></i> <%= post.comments %> Comments</p>
            </div>
        </div>
        <% } %>
    </div>
</body>
</html>